{
  "name": "TabGroupr",
  "description": "Organize your tabs into groups",
  "version": "1.0",

  "permissions": [
    "tabs",
    "storage"
  ],

  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "TabGroupr",
    "default_popup": "popup.html"
  },
  
  "icons": { "48": "icon-48.png",
             "128": "icon-128.png" },

  "manifest_version": 2
}
